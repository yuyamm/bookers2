<div class="container">
	<div class="row">
		<div class="col-md-3">
			<%= render 'books/user_info', user: @user , book: @book %>
		</div>

		<div class="col-md-8 offset-md-1">
			<h2>Users</h2>
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td>
								<%= attachment_image_tag user, :profile_image, fallback: "no_image.jpeg", size: "50x50" %>
							</td>
							<td>
								<%= user.name %>
							</td>
							<td>
								<%= link_to "Show", user_path(user) %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>



